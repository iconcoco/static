/* component/dialog/dialog.wxss */
.dialog_success {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
}

.dialog_success .dialog_bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialog_success .success_content {
  width: 540rpx;
  height: 620rpx;
  background-color: white;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -310rpx;
  margin-left: -270rpx;
  border-radius: 10rpx
}

.dialog_success .success_title {
  height: 102rpx;
  line-height: 102rpx;
  background-color: #ef6c2a;
  color: white;
  font-size: 42rpx;
  text-align: center;
  border-radius: 10rpx 10rpx 0 0;
}

.dialog_success .success_title .yes_icon {
  display: inline-block;
  width: 53rpx;
  height: 59rpx;
  vertical-align: middle;
  margin-right: 35rpx;
  background: url("https://www.tobosu.com//static/WeChat/images/min_design/yes_03.png");
  background-size: 100% 100%;
}

.dialog_success .success_info {
  height: 336rpx;
  border-bottom: 1rpx solid #ccc;
  padding-top: 28rpx;
  box-sizing: border-box;
}

.dialog_success .success_info .info_content {
  width: 493rpx;
  height: 280rpx;
  margin: 0 auto;
  background: url("https://www.tobosu.com//static/WeChat/images/min_design/24hour_03.png");
  background-size: 100% 100%;
}

.dialog_success .success_button {
  padding: 24rpx 50rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: left;
  color: #ccc;
}

.dialog_success .close {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  margin-left: -32rpx;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
 background: url("https://www.tobosu.com//static/WeChat/images/min_design/no_03.png");
  background-size: 100% 100%;
  overflow: hidden;
}
