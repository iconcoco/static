.chosecity {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow: hidden;
  top: 0;
  right: 0;
  z-index: 9999;
  -webkit-transition: all .5s;
          transition: all .5s;
}

.chosecity.hide {
  display: none;
}

.chosecity .chosoecity_bg {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.chosecity .close_modal {
  position: absolute;
  left: 60rpx;
  top: 50%;
  width: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}

.chosecity .chosecity_content {
  position: absolute;
  right: -100%;
  top: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 2;
  transform: translate(100%,0);
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-transition: all .2s;
          transition: all .2s;
}
.chosecity_content.active {
  right: 0;
  transform: translate(0,0);
}
.chosecity .chosecity_content .provice {
  width: 300rpx;
  position: absolute;
  right: 300rpx;
  top: 0;
  bottom: 0;
}
.chosecity .chosecity_content .city{
  width: 300rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
}

.chosecity .chosecity_content view {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 75rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 26rpx;
  margin-left: 51rpx;
  box-sizing: border-box;
}

.chosecity .chosecity_content view {
  border-bottom: 1rpx solid #ededed;
}

.chosecity .chosecity_content view text {
  color: #a8a8a8;
  margin-right: 15rpx;
}

.chosecity .chosecity_content .active {
  background-color: #f6f6f6;
  padding-left: 51rpx;
  margin-left: 0;
  position: relative;
  color: #ff920e;
}

.chosecity .chosecity_content .active text {
  color: #ff920e;
}

.chosecity .chosecity_content .active::before {
  content: "";
  position: absolute;
  top: -1rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color: #ededed;
}
.chosecity .chosecity_content .provice {
  background-color: #fff;
}
.chosecity .chosecity_content .city {
  background-color: #f6f6f6;
}
