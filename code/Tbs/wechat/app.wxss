page{
  min-height: 100%;
  max-width: 100%;
  overflow-x: hidden;
  /* background-color:  #f8f8f9; */
}
.container{
  min-height: 100vh;
}
.relative{
  position: relative;
}
.flex-column {
  display: flex;
  flex-flow: column nowrap;
}
.flex-row{
  display: flex;
  flex-flow: row nowrap;
}
.hide{
  display: none!important;
}
.modal{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 99;
}
.over-hide{
  overflow: hidden!important;
}
.flex-1{
  flex: 1 0 0;
}
.flex-center{
  text-align: center;
  align-items: center;
  align-self: center;
}
.placeholder-class{
  font-size: 32rpx;
  padding-left: 15rpx;
}
.input-text{
  position: relative;
  background-color: #f8f8f8;
  height: 80rpx;
  padding-left: 20rpx;
}
.search{
