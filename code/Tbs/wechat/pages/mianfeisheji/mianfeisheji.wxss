.top {
  position: relative;
  width: 100vw;
  height: 40vh;
}
.top::after{
  content: '';
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100vw;
  height: 40vh;
  background-color: rgba(0,0,0,.3);
}
.top,.bot{
  overflow-x: hidden;
}
.top-img {
  position: absolute;
  width: 100%;
  height: 40vh;
}

.top-img::after {
  position: absolute;
  top: 80%;
  content: '';
  width: 200vw;
  height: 200vh;
  background-color: white;
  transform: rotate(-2deg);
  z-index: 100;
}

.sjs-wrap {
  position: absolute;
  width: 100vw;
  height: 96rpx;
  z-index: 10;
  bottom: 80rpx;
  overflow: hidden;
  margin: 0 30rpx;
}

.avatat-img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50% 50%;
  margin-right: 20rpx;
}

.sjsname {
  font-size: 36rpx;
  color: white;
  padding-right: 20rpx;
}

.sjspng {
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  color: white;
  background-color: black;
  border-radius: 0 6px 0 6px;
}

.flex-center {
  display: flex;
  align-content: center;
}

.bot {
  background-color: white;
  padding: 0rpx 30rpx;
}

.msg {
  font-size: 36rpx;
  text-align: center;
  padding: 0rpx 0 40rpx 0;
}

.form-item {
  position: relative;
  padding:30rpx 34rpx;
  margin-bottom:28rpx;
  border-radius:8rpx;
  position:relative;
background-color: #f8f8f8;
}
.arrow{
  position: absolute;
  right: 30rpx;
  top: 38rpx;
  width: 20rpx;
  height: 34rpx;
}
.placeClass{
  color: black;
  font-size: 24rpx;
}
.placeClass-no{
  color: #888888;
  font-size: 24rpx;
}
.ipt-txt {
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  color: #333;
}
.pub-btn button{
    width: 100%;
    margin-top: 18rpx;
    height: 90rpx;
    line-height: 90rpx;
    border: 0;
    text-align: center;
    font-size: 32rpx;
    background: linear-gradient(-360deg, #ff7a75, #f93);
    background: -webkit-linear-gradient(-360deg, #ff7a75, #f93);
    color: #fff;
    border-radius: 6rpx;
}
.pop-header {
    width: 100%;
}
.pop-header text {
    font-size: 36rpx;
    color: #222;
    line-height: 80rpx;
    text-align: center;
    margin-top: 20rpx;
    display: block;
    padding: 0;
}
.pop-ban {
    width: 100%;
    height: 200rpx;
    display: -webkit-box;
    display: box;
    -webkit-box-orient: vertical;
    box-orient: vertical;
    -webkit-box-align: center;
    box-align: center;
    -webkit-box-pack: center;
    box-pack: center;
}
.pop-ban text {
    display: block;
    font-size: 28rpx;
    color: #666;
    text-align: center;
    line-height: 1.3;
}
.pop-footer {
    width: 100%;
    height: 100rpx;
}
.pop-footer text {
    display: block;
    width: 360rpx;
    background-color: #FF6F20;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 500rpx;
    -webkit-border-radius: 500rpx;
    margin: 0 auto;
}